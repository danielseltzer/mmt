{
  "name": "@mmt/vault",
  "version": "1.0.0",
  "description": "Vault container and registry for MMT multi-vault architecture",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@mmt/entities": "workspace:*",
    "@mmt/indexer": "workspace:*",
    "@mmt/config": "workspace:*",
    "@mmt/filesystem-access": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "eslint": "^8.57.1"
  }
}