{
  "name": "@mmt/scripting",
  "version": "0.0.0",
  "description": "Scripting API for MMT - execute declarative operation pipelines on markdown vaults",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@mmt/entities": "workspace:*",
    "@mmt/filesystem-access": "workspace:*",
    "@mmt/indexer": "workspace:*",
    "@mmt/query-parser": "workspace:*",
    "@mmt/document-operations": "workspace:*",
    "arquero": "^8.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jrwats/arquero-types": "^5.4.1",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
