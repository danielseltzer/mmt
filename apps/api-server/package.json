{
  "name": "@mmt/api-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/src/server.js",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@mmt/config": "workspace:*",
    "@mmt/document-operations": "workspace:*",
    "@mmt/entities": "workspace:*",
    "@mmt/file-relocator": "workspace:*",
    "@mmt/filesystem-access": "workspace:*",
    "@mmt/indexer": "workspace:*",
    "@mmt/logger": "workspace:*",
    "@mmt/similarity-provider": "workspace:*",
    "@mmt/similarity-provider-orama": "workspace:*",
    "@mmt/similarity-provider-qdrant": "workspace:*",
    "@mmt/vault": "workspace:^",
    "@orama/orama": "^3.1.11",
    "@orama/plugin-data-persistence": "^3.1.11",
    "@types/glob": "^8.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "supertest": "^7.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^3.2.4"
  }
}