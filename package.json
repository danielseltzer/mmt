{
  "name": "mmt",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx tools/control-manager/src/cli.ts start",
    "dev:web": "tsx tools/control-manager/src/cli.ts start --web-only",
    "dev:api": "tsx tools/control-manager/src/cli.ts start --api-only",
    "dev:frontend": "pnpm --filter @mmt/web dev",
    "prebuild": "sh -c 'count=$(find . -path \"*/src/*.d.ts\" -o -path \"*/src/*.d.ts.map\" | grep -v node_modules | wc -l | tr -d \" \"); if [ \"$count\" != \"0\" ]; then echo \"ERROR: Found $count compiled TypeScript files (.d.ts) in src directories. These should only be in dist/. Run pnpm clean first.\"; exit 1; fi'",
    "build": "turbo build",
    "test": "pnpm test:all",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration", 
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "pnpm test:unit && pnpm test:integration",
    "test:watch": "turbo test",
    "setup:test-vault": "node scripts/setup-test-vault.js",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules && rm -rf dist && find . -path '*/src/*.js' -o -path '*/src/*.d.ts' -o -path '*/src/*.d.ts.map' | grep -v '.config.js' | grep -v node_modules | xargs rm -f",
    "test:report": "node scripts/test-report.mjs",
    "query:report": "node scripts/query-syntax-report.mjs",
    "report:operations": "tsx tools/generate-operations-report.ts",
    "dep:detailed": "depcruise --config .dependency-cruiser.cjs --output-type dot . | dot -T svg > code-analysis/dependency-detailed.svg",
    "dep:architecture": "depcruise --config .dependency-cruiser.cjs --output-type archi . | dot -T svg > code-analysis/dependency-architecture.svg",
    "dep:folder": "depcruise --config .dependency-cruiser.cjs --output-type ddot . | dot -T svg > code-analysis/dependency-folder.svg",
    "dep:all": "pnpm run dep:detailed && pnpm run dep:architecture && pnpm run dep:folder",
    "dep:validate": "depcruise --config .dependency-cruiser.cjs .",
    "dep:packages": "depcruise --config .dependency-cruiser.cjs --output-type archi --do-not-follow \"^node_modules\" --include-only \"^packages/[^/]+/src/index\\.ts$\" . | dot -T svg > code-analysis/dependency-packages.svg",
    "dep:summary": "depcruise --config .dependency-cruiser.cjs --output-type archi --collapse \"^(packages|apps)/[^/]+/(src|test)\" . | dot -T svg > code-analysis/dependency-summary.svg",
    "analyze:all": "node scripts/analysis/run-code-analysis.mjs",
    "analyze:packages": "node scripts/analysis/analyze-package-dependencies.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.53.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/ui": "^3.2.3",
    "dependency-cruiser": "^16.10.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "happy-dom": "^18.0.1",
    "playwright": "^1.53.1",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}